<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadscreenbackground"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="734dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/right_icons" />

            <LinearLayout
                android:layout_width="379dp"
                android:layout_height="102dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Welcome Back"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/poppins"
                    android:text="Charitha"
                    android:textColor="@color/green"
                    android:textSize="24sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutsearch"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <SearchView

                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/background_ouline"
                        android:paddingStart="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_ouline"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnbook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="BOOK"
                            android:textSize="14sp"
                            app:icon="@drawable/bookicon"
                            app:iconGravity="textTop"
                            app:iconPadding="20dp"
                            app:iconSize="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_ouline"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnmember"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00262C34"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="MEMBER"
                            android:textSize="14sp"
                            app:icon="@drawable/icons8_member_50"
                            app:iconGravity="textTop"
                            app:iconPadding="20dp"
                            app:iconSize="50dp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_ouline"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnlendbook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00262C34"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="LEND"
                            android:textSize="14sp"
                            app:icon="@drawable/borrowbook"
                            app:iconGravity="textTop"
                            app:iconPadding="20dp"
                            app:iconSize="55dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_ouline"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnreturn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00262C34"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="RETURN"
                            android:textSize="14sp"
                            app:icon="@drawable/returnbook"
                            app:iconGravity="textTop"
                            app:iconPadding="20dp"
                            app:iconSize="55dp" />
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navbar"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background_round_normal"
        android:backgroundTint="#262C34"
        android:elevation="8dp"
        android:translationZ="-8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnhome"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Home"
                    android:textColor="@color/green"
                    android:textSize="10sp"
                    app:icon="@drawable/homeicon"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/green" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnsearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Search"
                    android:textSize="10sp"
                    app:icon="@drawable/icons8_search_30"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnnotification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Notification"
                    android:textSize="10sp"
                    app:icon="@drawable/icons8_notification_24"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnstore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Store"
                    android:textSize="10sp"
                    app:icon="@drawable/icons8_library_24"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp" />
            </FrameLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
